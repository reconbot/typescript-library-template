{
  "name": "@reconbot/typescript-library-template",
  "version": "0.0.0-development",
  "description": "Rollup your code and types for publishing",
  "types": "dist/index.d.ts",
  "exports": {
    "require": "./dist/index.js",
    "default": "./dist/index-esm.mjs"
  },
  "engines": {
    "node": "^12.22 || ^14.13 || >=16"
  },
  "repository": "git@github.com:reconbot/typescript-library-template.git",
  "homepage": "https://github.com/reconbot/typescript-library-template",
  "scripts": {
    "test": "mocha",
    "lint": "tsc && eslint lib/**/*.ts",
    "format": "eslint lib/**/*.ts --fix",
    "clean": "rm -rf dist-ts dist",
    "build": "npm run clean && tsc -p tsconfig-build.json && rollup -c && ts-eager bundle-types",
    "prepublishOnly": "npm run build",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "typescript-library-template"
  ],
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@microsoft/api-extractor": "^7.16.1",
    "@types/chai": "^4.2.19",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.12.4",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "chai": "^4.3.4",
    "eslint": "^7.29.0",
    "mocha": "^9.0.1",
    "rollup": "^2.52.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "ts-eager": "^2.0.2",
    "typescript": "^4.3.4",
    "semantic-release": "^17.4.4"
  },
  "mocha": {
    "bail": true,
    "require": [
      "ts-eager/register",
      "chai/register-assert"
    ],
    "spec": "lib/**/*-test.ts"
  }
}
